<Application x:Class="LeeDenbighsInteractiveCV.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LeeDenbighsInteractiveCV"
             xmlns:converters="clr-namespace:LeeDenbighsInteractiveCV.Services"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionaries/Colours.xaml"/>
                <ResourceDictionary Source="Dictionaries/IconPaths.xaml"/>
                <ResourceDictionary Source="Dictionaries/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Add WidthConverter here -->
            <converters:WidthConverter x:Key="WidthConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
